<h1>Add a service item</h1>

<%= form_for(@service_item) do |f| %>
    <%= select 'service', 'service_category', %w[ Hair Prayer Electronics Goods Tutoring Notices Events ] %>
    <%= f.hidden_field :service_category, value: @service_category %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>

    <%= f.label :duration %>
    <%= f.text_field :duration, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>

    <%= f.submit 'save', class: "btn btn-primary" %>
<% end %>